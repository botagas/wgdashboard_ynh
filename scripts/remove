#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# REMOVE SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Removing system configurations related to $app..."

ynh_config_remove_logrotate

if ynh_hide_warnings yunohost service status "$app" >/dev/null; then
    yunohost service remove "$app"
fi

ynh_config_remove_systemd

ynh_config_remove_nginx

ynh_safe_rm "/etc/cron.d/$app"

ynh_safe_rm "/etc/$app"

#=================================================
# CLEAN UP WIREGUARD RELATED FILES
#=================================================
ynh_script_progression "Cleaning up WireGuard related files..."

# Check if other WireGuard YunoHost packages are installed
wireguard_other_packages=false
if yunohost app list | grep -q "id: wireguard" 2>/dev/null; then
    ynh_print_info "Other WireGuard YunoHost packages detected, preserving WireGuard installation..."
    wireguard_other_packages=true
fi

# Remove WGDashboard backup directory
ynh_safe_rm "/etc/wireguard/WGDashboard_Backup"

# Remove ACL permissions for the app group
# This allows other WireGuard packages to continue working
if command -v setfacl >/dev/null 2>&1; then
    setfacl -x g:"$app" /etc/wireguard 2>/dev/null || true
fi

# Remove IP forwarding configuration that we created
# Always remove our config file if it exists, since:
# - If no other WireGuard packages exist, we should clean up
# - If other WireGuard packages exist, they have their own config and ours is redundant
if [ -f "/etc/sysctl.d/$app.conf" ]; then
    ynh_script_progression "Removing WireGuard IP forwarding configuration..."
    ynh_safe_rm "/etc/sysctl.d/$app.conf"
    # Note: We don't disable IP forwarding immediately as it might be in use
    # Other WireGuard packages will have their own sysctl config if needed
fi

# If no other WireGuard packages are present, remove WireGuard completely
if [ "$wireguard_other_packages" = false ]; then
    ynh_script_progression "No other WireGuard packages detected, removing WireGuard installation..."
    
    # Stop any running WireGuard configurations
    for config in /etc/wireguard/*.conf; do
        if [ -f "$config" ]; then
            config_name=$(basename "$config" .conf)
            systemctl stop "wg-quick@$config_name" 2>/dev/null || true
        fi
    done
    
    # YunoHost does not handle services not ending with .service, let's remove them manually
    systemctl stop wireguard@wg0.path 2>/dev/null || true
    systemctl disable wireguard@wg0.path --quiet 2>/dev/null || true
    ynh_safe_rm "/etc/systemd/system/wireguard@.path"
    
    systemctl stop wireguard@wg0.service 2>/dev/null || true
    systemctl disable wireguard@wg0.service --quiet 2>/dev/null || true
    ynh_safe_rm "/etc/systemd/system/wireguard@.service"
    
    # Disable the wg-quick service template
    systemctl disable wg-quick@.service --quiet 2>/dev/null || true
    
    # Remove WireGuard directory completely
    ynh_safe_rm "/etc/wireguard"
fi

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Removal of $app completed"
